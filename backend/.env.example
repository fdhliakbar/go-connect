# Database Configuration
DATABASE_URL=host=localhost user=postgres password=your_password dbname=go_connect port=5432 sslmode=disable TimeZone=Asia/Jakarta

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Server Configuration
PORT=8080
GIN_MODE=debug

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10485760

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Connection Pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# Redis Configuration (Optional for future use)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (Optional for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@go-connect.com

# File Storage (Optional - for future AWS S3 integration)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=

# Application Configuration
APP_NAME=Go-Connect
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
BCRYPT_COST=12